<h1>Sign up a Camper for <%= @activity.name %>!</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |msg| %>
    <ul>
      <li style="color: red;"><%= msg %></li>
    </ul>
  <% end %>
<% end %>

<%= form_for @signup, url: "/activities/#{@activity.id}/signups" do |f| %>
  <%= f.hidden_field :activity_id, :value => @activity.id %>
  
  <%= f.label "Camper" %><br>
  <%= f.collection_select :camper_id, @campers, :id, :name %><br>

  <%= f.label :hour %><br>
  <%= f.number_field :hour %><br>

  <%= f.submit %>
<% end %>